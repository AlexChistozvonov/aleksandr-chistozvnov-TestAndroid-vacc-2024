<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.TextInput.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24.5dp</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.TextInput.SmallComponent</item>
        <item name="boxStrokeColor">@color/brown_color_medium</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/brown_color_light</item>
        <item name="android:textColorHint">@color/brown_color_light</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/brown_color_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="TextBold">
        <item name="android:textColor">@color/brown_color_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="buttonH100">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/ocher</item>
    </style>

</resources>